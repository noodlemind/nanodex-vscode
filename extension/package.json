{
  "name": "nanodex",
  "displayName": "nanodex",
  "description": "Structured context + compounding flows for predictable coding agents",
  "version": "0.5.0",
  "type": "module",
  "publisher": "nanodex",
  "repository": {
    "type": "git",
    "url": "https://github.com/nanodex/nanodex-vscode.git"
  },
  "icon": "icon.png",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.106.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "code generation",
    "knowledge graph",
    "context",
    "copilot"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nanodex.plan",
        "title": "Plan",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.work",
        "title": "Work",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.index",
        "title": "Index Workspace",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.reindex",
        "title": "Reindex Changed Files",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.clear",
        "title": "Clear Index",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.stats",
        "title": "Graph Stats",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.selectModel",
        "title": "Select Model",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.selectChatStrategy",
        "title": "Select Chat Strategy",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.showModelStatus",
        "title": "Show Model Status",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.optimize",
        "title": "Optimize Database",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.genCommand",
        "title": "Generate Custom Command",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.triage",
        "title": "Triage Findings",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.resolveTodos",
        "title": "Resolve TODOs",
        "category": "Nanodex"
      },
      {
        "command": "nanodex.review",
        "title": "Review Pull Request",
        "category": "Nanodex"
      }
    ],
    "chatParticipants": [
      {
        "id": "nanodex",
        "name": "nanodex",
        "description": "AI assistant with knowledge graph integration for code understanding and implementation",
        "isSticky": true,
        "commands": [
          {
            "name": "plan",
            "description": "Create an implementation plan"
          },
          {
            "name": "work",
            "description": "Start working on an issue"
          },
          {
            "name": "explain",
            "description": "Explain code with graph context"
          },
          {
            "name": "issues",
            "description": "List all issues"
          }
        ]
      }
    ],
    "languageModelTools": [
      {
        "name": "nanodex-query-graph",
        "tags": ["nanodex", "codebase", "knowledge-graph"],
        "toolReferenceName": "nanodexGraph",
        "displayName": "Query Nanodex Knowledge Graph",
        "modelDescription": "Query the nanodex knowledge graph for codebase symbols, modules, relationships, and architecture. Use this to understand code structure, find related code, or get context about the codebase.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Natural language query about the codebase"
            },
            "depth": {
              "type": "number",
              "description": "Traversal depth for relationships (1-5, default 2)"
            }
          },
          "required": ["query"]
        }
      },
      {
        "name": "nanodex-lookup-symbol",
        "tags": ["nanodex", "symbol", "code"],
        "toolReferenceName": "nanodexSymbol",
        "displayName": "Lookup Symbol in Nanodex",
        "modelDescription": "Look up detailed information about a specific symbol (function, class, variable) including its relationships, callers, and dependencies.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "symbolName": {
              "type": "string",
              "description": "Name of the symbol to look up"
            },
            "includeRelationships": {
              "type": "boolean",
              "description": "Include symbol relationships (imports, calls, etc.)"
            }
          },
          "required": ["symbolName"]
        }
      },
      {
        "name": "nanodex-list-issues",
        "tags": ["nanodex", "issues", "planning"],
        "toolReferenceName": "nanodexIssues",
        "displayName": "List Nanodex Issues",
        "modelDescription": "List all nanodex issues (implementation plans) in the workspace with their status and details.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["pending", "in_progress", "completed", "all"],
              "description": "Filter by issue status (default: all)"
            }
          }
        }
      },
      {
        "name": "nanodex-get-file-context",
        "tags": ["nanodex", "file", "context"],
        "toolReferenceName": "nanodexFileContext",
        "displayName": "Get File Context from Nanodex",
        "modelDescription": "Get knowledge graph context for a specific file including its symbols, imports, exports, and relationships to other modules.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "Path to the file (relative to workspace root)"
            }
          },
          "required": ["filePath"]
        }
      },
      {
        "name": "nanodex-get-issue",
        "tags": ["nanodex", "issues", "planning"],
        "toolReferenceName": "nanodexGetIssue",
        "displayName": "Get Nanodex Issue Details",
        "modelDescription": "Get complete details for a specific nanodex issue by ID, including full plan, acceptance criteria, and context. Use this when you need the full issue information rather than the summary from list-issues.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "issueId": {
              "type": "string",
              "description": "The issue ID (e.g., 'ISSUE-001')"
            }
          },
          "required": ["issueId"]
        }
      },
      {
        "name": "nanodex-create-issue",
        "tags": ["nanodex", "issues", "planning"],
        "toolReferenceName": "nanodexCreateIssue",
        "displayName": "Create Nanodex Issue",
        "modelDescription": "Create a new nanodex issue (implementation plan) with a title, goal, optional plan, and acceptance criteria. Use this to plan and track implementation work.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Brief title for the issue"
            },
            "goal": {
              "type": "string",
              "description": "The goal or objective to accomplish"
            },
            "plan": {
              "type": "string",
              "description": "Implementation plan (optional)"
            },
            "acceptanceCriteria": {
              "type": "array",
              "items": { "type": "string" },
              "description": "List of acceptance criteria (optional)"
            }
          },
          "required": ["title", "goal"]
        }
      },
      {
        "name": "nanodex-update-issue-status",
        "tags": ["nanodex", "issues", "planning"],
        "toolReferenceName": "nanodexUpdateIssueStatus",
        "displayName": "Update Nanodex Issue Status",
        "modelDescription": "Update the status of a nanodex issue. Use this to mark issues as in_progress when starting work, or completed when finished.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "issueId": {
              "type": "string",
              "description": "The issue ID to update (e.g., 'ISSUE-001')"
            },
            "status": {
              "type": "string",
              "enum": ["pending", "in_progress", "completed"],
              "description": "New status for the issue"
            }
          },
          "required": ["issueId", "status"]
        }
      },
      {
        "name": "nanodex-delete-issue",
        "tags": ["nanodex", "issues", "planning"],
        "toolReferenceName": "nanodexDeleteIssue",
        "displayName": "Delete Nanodex Issue",
        "modelDescription": "Delete a nanodex issue permanently. Use this to remove completed or cancelled issues that are no longer needed.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "issueId": {
              "type": "string",
              "description": "The issue ID to delete (e.g., 'ISSUE-001')"
            }
          },
          "required": ["issueId"]
        }
      },
      {
        "name": "nanodex-graph-stats",
        "tags": ["nanodex", "codebase", "knowledge-graph"],
        "toolReferenceName": "nanodexGraphStats",
        "displayName": "Get Nanodex Graph Statistics",
        "modelDescription": "Get statistics about the nanodex knowledge graph including node counts, edge counts, and database size. Use this to understand the scope of indexed code.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "detailed": {
              "type": "boolean",
              "description": "Include detailed breakdown by node type and edge relation"
            }
          }
        }
      },
      {
        "name": "nanodex-indexing-status",
        "tags": ["nanodex", "indexing", "status"],
        "toolReferenceName": "nanodexIndexingStatus",
        "displayName": "Get Nanodex Indexing Status",
        "modelDescription": "Check the current status of workspace indexing. Use this to know if indexing is in progress, complete, or if an error occurred. Helpful before querying the knowledge graph.",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "nanodex-list-todos",
        "tags": ["nanodex", "todos", "tasks"],
        "toolReferenceName": "nanodexListTodos",
        "displayName": "List Nanodex Todos",
        "modelDescription": "List all nanodex todos (task items) in the workspace with optional filtering by status or tag.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["pending", "in_progress", "completed", "all"],
              "description": "Filter by todo status (default: all)"
            },
            "tag": {
              "type": "string",
              "description": "Filter by tag"
            }
          }
        }
      },
      {
        "name": "nanodex-get-todo",
        "tags": ["nanodex", "todos", "tasks"],
        "toolReferenceName": "nanodexGetTodo",
        "displayName": "Get Nanodex Todo Details",
        "modelDescription": "Get complete details for a specific nanodex todo by ID, including description, priority, tags, and context.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "todoId": {
              "type": "string",
              "description": "The todo ID (e.g., 'TODO-001')"
            }
          },
          "required": ["todoId"]
        }
      },
      {
        "name": "nanodex-create-todo",
        "tags": ["nanodex", "todos", "tasks"],
        "toolReferenceName": "nanodexCreateTodo",
        "displayName": "Create Nanodex Todo",
        "modelDescription": "Create a new nanodex todo (task item) with title, description, optional priority, and tags.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Brief title for the todo"
            },
            "description": {
              "type": "string",
              "description": "Detailed description of what needs to be done"
            },
            "priority": {
              "type": "string",
              "enum": ["low", "medium", "high"],
              "description": "Priority level (optional)"
            },
            "tags": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Tags for categorization (optional)"
            }
          },
          "required": ["title", "description"]
        }
      },
      {
        "name": "nanodex-update-todo-status",
        "tags": ["nanodex", "todos", "tasks"],
        "toolReferenceName": "nanodexUpdateTodoStatus",
        "displayName": "Update Nanodex Todo Status",
        "modelDescription": "Update the status of a nanodex todo. Use this to mark todos as in_progress when starting work, or completed when finished.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "todoId": {
              "type": "string",
              "description": "The todo ID to update (e.g., 'TODO-001')"
            },
            "status": {
              "type": "string",
              "enum": ["pending", "in_progress", "completed"],
              "description": "New status for the todo"
            }
          },
          "required": ["todoId", "status"]
        }
      }
    ],
    "configuration": {
      "title": "nanodex",
      "properties": {
        "nanodex.defaultModel": {
          "type": "string",
          "default": "copilot/gpt-4o",
          "description": "Default model for Plan/Work commands (format: provider/model-name). Available models are dynamically queried from VS Code Language Model API."
        },
        "nanodex.chat.modelStrategy": {
          "type": "string",
          "default": "useChatModel",
          "enum": [
            "useChatModel",
            "useConfiguredModel"
          ],
          "enumDescriptions": [
            "Use the active Chat panel model",
            "Use the configured default model"
          ],
          "description": "Model selection strategy for chat participant"
        },
        "nanodex.index.auto": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic indexing"
        },
        "nanodex.index.autoReindexMode": {
          "type": "string",
          "default": "onSave",
          "enum": [
            "onApply",
            "onSave",
            "off"
          ],
          "enumDescriptions": [
            "Reindex after applying workspace edits",
            "Reindex when files are saved",
            "Disable automatic reindexing"
          ],
          "description": "When to trigger automatic reindexing"
        },
        "nanodex.index.exclude": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/out/**",
            "**/.git/**",
            "**/.nanodex/**"
          ],
          "description": "Glob patterns to exclude from indexing"
        },
        "nanodex.index.maxWorkers": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 16,
          "description": "Maximum number of parallel indexing workers"
        },
        "nanodex.instructions.files": {
          "type": "array",
          "default": [
            "AGENTS.md",
            "instructions/**/*.instructions.md",
            ".nanodex/instructions/**/*.instructions.md"
          ],
          "description": "Custom instruction file patterns"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsc -p ./ && pnpm run copy-resources",
    "copy-resources": "mkdir -p dist/agents dist/prompts/flows && cp -r src/agents/*.yaml dist/agents/ 2>/dev/null || true && cp -r src/agents/*.yml dist/agents/ 2>/dev/null || true && cp -r src/prompts/flows/*.yaml dist/prompts/flows/ 2>/dev/null || true",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js",
    "package": "pnpm run build && node scripts/package-vsix.cjs",
    "package:all": "pnpm run build && node scripts/package-vsix.cjs --all-platforms",
    "package:win-x64": "pnpm run build && node scripts/package-vsix.cjs --target win32-x64",
    "package:win-arm64": "pnpm run build && node scripts/package-vsix.cjs --target win32-arm64",
    "package:linux-x64": "pnpm run build && node scripts/package-vsix.cjs --target linux-x64",
    "package:linux-arm64": "pnpm run build && node scripts/package-vsix.cjs --target linux-arm64",
    "package:mac-x64": "pnpm run build && node scripts/package-vsix.cjs --target darwin-x64",
    "package:mac-arm64": "pnpm run build && node scripts/package-vsix.cjs --target darwin-arm64"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.106.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "adm-zip": "^0.5.16",
    "eslint": "^9.18.0",
    "mocha": "^10.8.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@vscode/chat-extension-utils": "^0.0.0-alpha.5",
    "better-sqlite3": "^12.4.5",
    "js-yaml": "^4.1.1"
  }
}
